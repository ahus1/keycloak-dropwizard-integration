<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.1//EN"
        "suppressions_1_1.dtd">

<suppressions>

    <!-- Suppress Method name checks in BDD style tests -->
    <suppress checks="MethodName" files="[\\/]test[\\/].*[\\/](Feature|Given|When|Then)"/>

    <!-- Suppress MagicNumber checks in all unit tests -->
    <suppress checks="MagicNumber" files="[\\/]test[\\/].*[\\/]"/>

    <!-- Suppress all checks in generated sources -->
    <suppress checks=".*" files="[\\/]target[\\/]generated"/>

</suppressions>
